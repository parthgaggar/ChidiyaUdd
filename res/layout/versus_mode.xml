<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_versus_mode"
    android:orientation="horizontal">
    
    <LinearLayout 
        android:id = "@+id/user1_touch_panel_versus_mode"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2.5">
		<Button 
		    android:id = "@+id/user1_touch_button_versus_mode"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="Press Here User 1"
		    />
            <!-- android:id = "@+id/press_icon"
            android:layout_width ="wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity="fill"
            android:src="@drawable/pressicon01"/>    -->
    </LinearLayout>

    <LinearLayout 
        android:id = "@+id/image_and_score_panel_single_mode"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="7">

        <ImageView
            android:id="@+id/image_question_versus_mode"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/image01"
            android:layout_gravity="center"/>
        
    	<RelativeLayout 
    	    android:id="@+id/user_scores_versus_mode"
    	    android:layout_height="0dp"
    	    android:layout_width="fill_parent"
    	    android:layout_weight="1"
    	    android:orientation="horizontal">
			
			<TextView
			    android:id="@+id/user1_score_versus_mode"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    android:text="0"
			    android:textSize="40sp"
			    android:layout_gravity="center" />

			<TextView
			    android:id="@+id/user2_score_versus_mode"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:text="0"
			    android:textSize="40sp" />

		</RelativeLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id = "@+id/user2_touch_panel_versus_mode"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2.5">
		<Button 
		    android:id = "@+id/user2_touch_button_versus_mode"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="Press Here User 2"
		    />
            <!-- android:id = "@+id/press_icon"
            android:layout_width ="wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity="fill"
            android:src="@drawable/pressicon01"/>    -->
    </LinearLayout>

</LinearLayout>
